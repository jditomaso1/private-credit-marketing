  <!-- Minimal GA events -->
  <script>
    function fireGA(eventName, params){ if(typeof gtag==='function'){ gtag('event', eventName, params||{});} }

    const tryOrion = document.querySelector('a[href*="orion.private-credit.ai"]');
    if(tryOrion){
      tryOrion.addEventListener('click', () => fireGA('try_orion_click', {location:'nav', destination:'orion.private-credit.ai'}));
    }

    const contact = document.querySelector('a[href$="contact.html"]');
    if(contact){
      contact.addEventListener('click', () => fireGA('contact_click', {location:'nav'}));
    }
  </script>
